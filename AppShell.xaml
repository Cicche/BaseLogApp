<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="BaseLogApp.AppShell"
       xmlns:views="clr-namespace:BaseLogApp.Views"
       Shell.BackgroundColor="#060A14"
       Shell.ForegroundColor="White"
       Shell.TitleColor="White"
       Shell.UnselectedColor="#7A859E"
       Shell.TabBarBackgroundColor="#060A14"
       Shell.TabBarForegroundColor="#2D8CFF"
       Shell.TabBarTitleColor="White"
       Shell.TabBarUnselectedColor="#7A859E">

    <TabBar>
        <ShellContent Title="Logbook" ContentTemplate="{DataTemplate views:JumpsPage}" Route="jumps" />
        <ShellContent Title="Summary" ContentTemplate="{DataTemplate views:SummaryPage}" Route="summary" />
    </TabBar>
</Shell>
