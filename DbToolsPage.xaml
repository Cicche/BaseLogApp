<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaseLogApp.Views.DbToolsPage"
             Title="Import / Export DB"
             BackgroundColor="#0A0F1E">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Formato leggero (JSON)" TextColor="White" FontAttributes="Bold"/>
        <Button Text="Export JSON" Clicked="OnExportJsonClicked" />
        <Button Text="Import JSON" Clicked="OnImportJsonClicked" />

        <Label Text="Formato completo (SQLite)" TextColor="White" FontAttributes="Bold" Margin="0,10,0,0"/>
        <Button Text="Export DB completo" Clicked="OnExportFullClicked" />
        <Button Text="Import DB completo" Clicked="OnImportFullClicked" />

        <Button Text="Chiudi" Clicked="OnCloseClicked" Margin="0,18,0,0"/>
    </VerticalStackLayout>
</ContentPage>
