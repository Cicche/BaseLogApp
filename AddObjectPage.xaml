<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaseLogApp.Views.AddObjectPage"
             Title="Nuovo Object"
             BackgroundColor="#0A0F1E">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Grid>
                <Image x:Name="ObjectPreviewImage" Aspect="AspectFit" HorizontalOptions="Fill" HeightRequest="220" IsVisible="False" />
                <Border x:Name="NoPhotoBorder" BackgroundColor="#151B2E" StrokeThickness="0" StrokeShape="RoundRectangle 12" HeightRequest="220" IsVisible="True">
                    <Label x:Name="NoPhotoNameLabel" Text="Nome object" TextColor="#8E99B8" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold" FontSize="20"/>
                </Border>
            </Grid>

            <Entry x:Name="ObjectNameEntry" Placeholder="Nome object" TextChanged="OnObjectNameChanged" />
            <Entry x:Name="ObjectTypeEntry" Placeholder="Tipo object (B/A/S/E/Others)" TextChanged="OnObjectTypeTextChanged" />
            <CollectionView x:Name="ObjectTypeSuggestionsView" IsVisible="False" HeightRequest="120" SelectionMode="Single" SelectionChanged="OnObjectTypeSuggestionSelected" BackgroundColor="#151B2E">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding .}" TextColor="White" Padding="10,8"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Editor x:Name="ObjectDescriptionEntry" Placeholder="Descrizione" AutoSize="TextChanges" HeightRequest="80"/>
            <Entry x:Name="ObjectHeightEntry" Placeholder="Altezza (m)" Keyboard="Numeric" />
            <Entry x:Name="ObjectPositionEntry" Placeholder="Posizione GPS (lat, lon)" />
            <Button Text="Auto-position GPS" Clicked="OnAutoPositionClicked" />
            <Button Text="Apri mappa" Clicked="OnOpenMapClicked" />
            <Button Text="Seleziona foto object" Clicked="OnPickPhotoClicked" />
            <Label x:Name="PhotoNameLabel" TextColor="#8E99B8" FontSize="12" />
            <Button x:Name="SaveButton" Text="Salva Object" Clicked="OnSaveClicked" BackgroundColor="#2D8CFF" TextColor="White"/>
            <Button Text="Chiudi" Clicked="OnCloseClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
