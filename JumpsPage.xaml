<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:core="clr-namespace:BaseLogApp.Core.Models"
             x:Class="BaseLogApp.Views.JumpsPage"
             Title="Logbook"
             BackgroundColor="#0A0F1E">

    <Grid RowDefinitions="Auto,*" Padding="16,12,16,0">
        <Border BackgroundColor="#151B2E" StrokeThickness="0" StrokeShape="RoundRectangle 16" Padding="8,2">
            <SearchBar x:Name="Search"
                       Placeholder="Cerca per numero, data, oggetto, tipo, note..."
                       Text="{Binding Query, Mode=TwoWay}" />
        </Border>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding FilteredItems}"
                        SelectionMode="None"
                        Margin="0,12,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="core:JumpListItem">
                    <Border StrokeThickness="0"
                            BackgroundColor="#151B2E"
                            StrokeShape="RoundRectangle 16"
                            Margin="0,0,0,10"
                            Padding="12">
                        <Grid ColumnDefinitions="64,*,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="12" RowSpacing="2">
                            <Label Grid.RowSpan="3"
                                   Text="{Binding NumeroSalto}"
                                   FontSize="34"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   VerticalTextAlignment="Start" />

                            <Label Grid.Column="1"
                                   Text="{Binding Oggetto}"
                                   FontSize="21"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   LineBreakMode="TailTruncation" />
                            <Label Grid.Column="2"
                                   Text="{Binding Data}"
                                   FontSize="14"
                                   TextColor="#8E99B8"
                                   HorizontalTextAlignment="End" />

                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="{Binding TipoSalto}"
                                   FontSize="16"
                                   TextColor="#D8DEEF" />

                            <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                   Text="{Binding Note}"
                                   FontSize="14"
                                   MaxLines="1"
                                   LineBreakMode="TailTruncation"
                                   TextColor="#8E99B8" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
