<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#38BDF8</Color>
    <Color x:Key="PrimaryDark">#0EA5E9</Color>
    <Color x:Key="PrimaryDarkText">#082F49</Color>
    <Color x:Key="Secondary">#A855F7</Color>
    <Color x:Key="SecondaryDarkText">#C4B5FD</Color>
    <Color x:Key="Tertiary">#F97316</Color>

    <Color x:Key="SurfaceLight">#FFFFFF</Color>
    <Color x:Key="SurfaceDark">#1E293B</Color>
    <Color x:Key="BackgroundLight">#F8FAFC</Color>
    <Color x:Key="BackgroundDark">#0F172A</Color>

    <Color x:Key="TextPrimaryLight">#0F172A</Color>
    <Color x:Key="TextSecondaryLight">#475569</Color>
    <Color x:Key="TextPrimaryDark">#E2E8F0</Color>
    <Color x:Key="TextSecondaryDark">#94A3B8</Color>

    <Color x:Key="Gray100">#E2E8F0</Color>
    <Color x:Key="Gray200">#CBD5F5</Color>
    <Color x:Key="Gray300">#CBD5F5</Color>
    <Color x:Key="Gray400">#94A3B8</Color>
    <Color x:Key="Gray500">#64748B</Color>
    <Color x:Key="Gray600">#475569</Color>
    <Color x:Key="Gray700">#334155</Color>
    <Color x:Key="Gray800">#1E293B</Color>
    <Color x:Key="Gray900">#0F172A</Color>
    <Color x:Key="Gray950">#111827</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="SurfaceLightBrush" Color="{StaticResource SurfaceLight}"/>
    <SolidColorBrush x:Key="SurfaceDarkBrush" Color="{StaticResource SurfaceDark}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="TextPrimaryLightBrush" Color="{StaticResource TextPrimaryLight}"/>
    <SolidColorBrush x:Key="TextSecondaryLightBrush" Color="{StaticResource TextSecondaryLight}"/>
    <SolidColorBrush x:Key="TextPrimaryDarkBrush" Color="{StaticResource TextPrimaryDark}"/>
    <SolidColorBrush x:Key="TextSecondaryDarkBrush" Color="{StaticResource TextSecondaryDark}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>
