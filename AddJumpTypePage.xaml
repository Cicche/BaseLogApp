<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaseLogApp.Views.AddJumpTypePage"
             Title="Nuovo Tipo Salto"
             BackgroundColor="#0A0F1E">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Entry x:Name="NameEntry" Placeholder="Nome tipo salto" />
        <Editor x:Name="NotesEntry" Placeholder="Note" HeightRequest="100" />
        <Button x:Name="SaveButton" Text="Salva tipo salto" Clicked="OnSaveClicked" BackgroundColor="#2D8CFF" TextColor="White"/>
        <Button x:Name="SeedDefaultsButton" Text="Inserisci default (Low/Terminal/Subterminal)" Clicked="OnSeedDefaultsClicked" />
        <Button Text="Chiudi" Clicked="OnCloseClicked" />
    </VerticalStackLayout>
</ContentPage>
