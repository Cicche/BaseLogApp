<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:core="clr-namespace:BaseLogApp.Core.Models"
             x:Class="BaseLogApp.Views.RigListPage"
             Title="Rig"
             BackgroundColor="#0A0F1E">
    <CollectionView x:Name="RigsView" Margin="16" SelectionMode="Single" SelectionChanged="OnRigSelected">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="core:CatalogItem">
                <Border BackgroundColor="#151B2E" StrokeThickness="0" StrokeShape="RoundRectangle 12" Padding="12">
                    <Label Text="{Binding Name}" TextColor="White" FontSize="16"/>
                </Border>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
