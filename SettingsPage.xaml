<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BaseLogApp.Views.SettingsPage"
             Title="Settings"
             BackgroundColor="#0A0F1E">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Grid ColumnDefinitions="*,Auto">
                <Label Text="Object" TextColor="White" VerticalTextAlignment="Center" FontSize="16"/>
                <Button Grid.Column="1" Text="+" WidthRequest="44" Clicked="OnOpenAddObjectClicked" />
            </Grid>

            <Grid ColumnDefinitions="*,Auto">
                <Label Text="Rig" TextColor="White" VerticalTextAlignment="Center" FontSize="16"/>
                <Button Grid.Column="1" Text="+" WidthRequest="44" Clicked="OnOpenAddRigClicked" />
            </Grid>

            <Grid ColumnDefinitions="*,Auto">
                <Label Text="Tipo Salto" TextColor="White" VerticalTextAlignment="Center" FontSize="16"/>
                <Button Grid.Column="1" Text="+" WidthRequest="44" Clicked="OnOpenAddJumpTypeClicked" />
            </Grid>

            <Button Text="Import / Export DB" Clicked="OnOpenDbToolsClicked" Margin="0,10,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
